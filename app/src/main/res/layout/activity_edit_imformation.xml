<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/pink">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/red">

        <ImageButton
            android:src="@drawable/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_infor_return"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@color/transparent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textView"
            android:autoText="false"
            android:background="@drawable/button_shape"
            android:text="完善个人信息"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textSize="25sp"
            android:textColor="@color/white" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_weight="1"
        android:layout_margin="10dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp" >

            <ImageView
                android:src="@drawable/user"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/imageView13" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/input_realName"
                android:singleLine="true"
                android:background="@drawable/edit_shape"
                android:hint="请输入姓名" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp" >

            <ImageView
                android:src="@drawable/address"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/imageView17" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:id="@+id/input_personAddress"
                android:background="@drawable/edit_shape"
                android:hint="请输入地址" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp" >

            <ImageView
                android:src="@drawable/phone"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/imageView18" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:id="@+id/input_phoneNum"
                android:background="@drawable/edit_shape"
                android:hint="请输入手机号码" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp" >

            <ImageView
                android:src="@drawable/information"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/imageView20" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ems="10"
                android:id="@+id/input_confirmCode"
                android:background="@drawable/edit_shape"
                android:hint="请输入验证码" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="获取验证码"
                android:id="@+id/btn_confirmCode"
                android:background="@color/white" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp" >

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="确认信息"
                android:id="@+id/btn_infor_commit"
                android:background="@drawable/button_shape"
                android:textSize="20sp"
                android:textColor="@color/white" />
        </TableRow>

    </LinearLayout>


</LinearLayout>
